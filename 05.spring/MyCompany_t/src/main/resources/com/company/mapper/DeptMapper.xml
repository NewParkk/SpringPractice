 <mapper namespace="com.company.mapper.DeptMapper">
	<select id="getAllDeptList" resultType="com.company.dto.Dept">
			SELECT * FROM dept
	</select>
	 
	<select id="getDeptByDeptno"
			parameterType="_int"
			resultType="com.company.dto.Dept">
		SELECT *
		FROM dept
		WHERE deptno = ${deptno}
	</select>
	 
	 
