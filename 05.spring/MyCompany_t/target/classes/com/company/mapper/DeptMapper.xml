<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.company.mapper.DeptMapper">
	<select id="getAllDeptList" 
			resultType="com.company.dto.Dept">
		SELECT * 
		FROM dept
	</select>
	 
	<select id="getDeptByDeptno"
			parameterType="_int"
			resultType="com.company.dto.Dept">
		SELECT *
		FROM dept
		WHERE deptno = ${deptno}
	</select>
	 
	 
	<insert id="insertDept"
			parameterType="com.company.dto.Dept">
		INSERT INTO dept
		VALUES (#{deptno}, #{dname}, #{loc})	
	</insert>
	 	
	<update id="updateDnameAndLoc"
			parameterType="com.company.dto.Dept">
		UPDATE dept
		SET dname = #{dname} ,
			loc = #{loc}
		WHERE deptno = #{deptno} 		
	</update>
	 	
	<delete id="deleteDeptByDeptno"
			parameterType="_int">
	 	DELETE FROM dept
	 	WHERE deptno = #{deptno}	
	</delete>
 	
 </mapper>